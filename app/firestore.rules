rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // admin かどうか
    match /admin/{userId} {
      allow get: if isUser(userId);
    }

    match /{datasetId} {
      // admin user
      match /annotation-progress {
        allow read: if isAdmin() && isDataset(datasetId);
        allow create, update: if isAdmin() && isDataset(datasetId);
      }

      match /users/{userId}/{document=**} {
        allow read: if isAdmin() && isDataset(datasetId);
      }

      // normal user
      match /annotation-progress {
        allow get: if request.auth != null && isDataset(datasetId);
        allow update: if request.auth != null && isDataset(datasetId);
      }

      match /users/{userId}/{document=**} {
        allow read: if isUser(userId) && isDataset(datasetId);
        allow write: if isUser(userId) && isDataset(datasetId);
      }
    }

    function isDataset(docId) {
      return docId != "admin";
    }

    function isUser(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/admin/$(request.auth.uid)).data.isAdmin;
    }
  }
}
